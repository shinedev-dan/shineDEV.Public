@model AccountPlugin.Models.ProfileViewModel
@{
    Layout = Common.Controllers.BaseController.DefaultLayout;
    ViewBag.PageTitle = "My Profile";
    ViewBag.PageDescription = "Change your account settings";
}


<div class="row">
    @using (Html.BeginForm("Profile", "Account", null, FormMethod.Post, new { role = "form" }))
    {
        <div class="col-md-12">
            @Html.AntiForgeryToken()
            @Html.Partial("_ValidationSummary", ViewData.ModelState)
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.OrganizationId)
            @Html.HiddenFor(m => m.Email)
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.DisplayFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.EditorFor(m => m.PhoneNumber, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.EditorFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName)
                @Html.EditorFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Id)
                @Html.DisplayFor(m => m.Id, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.OrganizationId)
                @Html.DisplayFor(m => m.OrganizationId, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DateFormat)
                @Html.EditorFor(m => m.DateFormat, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TimeFormat)
                @Html.EditorFor(m => m.TimeFormat, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group form-actions">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    }
</div>