@model ContactPlugin.Models.ContactFormBasic

@{
    Layout = Common.Controllers.BaseController.DefaultLayout;
    ViewBag.PageTitle = "Contact Us";
    ViewBag.PageDescription = "We can't wait to hear from you";
}

<div class="row">
    <div class="col-md-8">
        <h3>Send us a Message</h3>
        @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "" }))
        {
            @Html.AntiForgeryToken()
            @Html.Partial("_ValidationSummary", ViewData.ModelState)
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.EditorFor(m => m.Name, new { @class = "form-control" })
                @*<input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.EditorFor(m => m.PhoneNumber, new { @class = "form-control" })
                @*<input type="tel" class="form-control" id="phone" required data-validation-required-message="Please enter your phone number.">*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmailAddress)
                @Html.EditorFor(m => m.EmailAddress, new { @class = "form-control" })
                @*<input type="email" class="form-control" id="email" required data-validation-required-message="Please enter your email address.">*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message)
                @Html.EditorFor(m => m.Message, new { @class = "form-control", textarea = "true", rows = 10 })
                @*<textarea rows="10" cols="100" class="form-control" id="message" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>*@
            </div>
            <div class="form-group form-actions">
                <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
        }
    </div>
    <!-- Contact Details Column -->
    <div class="col-md-4">
        <h3>Contact Details</h3>
        <iframe width="100%" height="200px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe>
        <h5>Address:</h5>
        <p>
            123 Test Drive<br>Space Coast, FL 32001<br>
        </p>
        <p>
            <i class="fa fa-phone"></i>
            <abbr title="Phone">P</abbr>: (123) 456-7890
        </p>
        <p>
            <i class="fa fa-envelope-o"></i>
            <abbr title="Email">E</abbr>: <a href="mailto:someone@yoursite.com">someone@yoursite.com</a>
        </p>
        <p>
            <i class="fa fa-clock-o"></i>
            <abbr title="Hours">H</abbr>: Monday - Friday: 9:00 AM to 5:00 PM
        </p>
        <ul class="list-unstyled list-inline list-social-icons">
            <li>
                <a href="#"><i class="fa fa-facebook-square fa-2x"></i></a>
            </li>
            <li>
                <a href="#"><i class="fa fa-linkedin-square fa-2x"></i></a>
            </li>
            <li>
                <a href="#"><i class="fa fa-twitter-square fa-2x"></i></a>
            </li>
            <li>
                <a href="#"><i class="fa fa-google-plus-square fa-2x"></i></a>
            </li>
        </ul>
    </div>
</div>
<!-- /.row -->
<!-- Contact Form -->
<!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
<div class="row">
    <!-- Map Column -->
    <div class="col-md-8">
        <!-- Embedded Google Map -->
        
    </div>
</div>
